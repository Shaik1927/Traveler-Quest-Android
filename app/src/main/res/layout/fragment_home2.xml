                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_margin="5dp"
                android:alignmentMode="alignMargins"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <!--mountains-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/mountain"
                    android:clickable="true"
                    android:layout_width="165dp"
                    app:cardCornerRadius="5dp"

                    android:layout_height="200dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mountains"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mountains"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="85dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginTop="110dp"
                        android:text="Mountains beckon adventurers with rugged terrain and breathtaking vistas."
                        android:textColor="#999"
                        android:textSize="12dp" />
                </androidx.cardview.widget.CardView>
                <!--    hills    -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/hills"
                    android:clickable="true"
                    android:layout_width="165dp"
                    app:cardCornerRadius="5dp"
                    android:layout_height="200dp"

                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/hills"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hills"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="85dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginTop="110dp"
                        android:text="The gentle siblings of grand mountains, offer adventurers a captivating terrain."
                        android:textColor="#999"
                        android:textSize="12dp" />
                </androidx.cardview.widget.CardView>
                <!--  forests      -->
