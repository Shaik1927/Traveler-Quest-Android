<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboardFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@color/blue"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:text="Traveler Quest Dasboard" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/top_rate"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center|top"
        android:background="@drawable/custom_edittext2"
        android:gravity="center"
        android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:src="@drawable/star"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext2"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="22sp"
            android:text="Top rated" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/activities"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center|top"
        android:background="@drawable/custom_edittext2"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/sail_ship"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext2"
            android:padding="4dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="22sp"
            android:text="Activities" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/locations"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center|top"
        android:background="@drawable/custom_edittext2"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/locationimg"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/custom_edittext2"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textSize="22sp"
            android:text="Locations" />
    </LinearLayout>
    </LinearLayout>

</FrameLayout>